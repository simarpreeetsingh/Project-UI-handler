.h-100(style="background-color: #f8f1f1").d-flex.align-items-center.justify-content-center
  .h-75.card.text-center.w-25.mr-5.shadow
    .card-body
      .card-title.h4.mt-3.text-mute
        span.text-muted Sign up
      form.mt-4(action="signup", method="post")
        .form-group.mb-4
          .text-secondary.d-flex.justify-content-between.align-items-center
            span Username
            if id === '"username"'
              .small.text-danger #{message}
          input.form-control.w-100(type="text" name="username" value= values ? values.username : "")
        .form-group.mb-4.d-flex
          .mr-2
            .text-secondary.text-left Display Picture
            input.form-control.py-1.pl-0(type="file" name="dp")
          div
            .text-secondary.d-flex.justify-content-between.align-items-center
              span Sex
            if id === '"sex"'
              .small.text-danger #{message}
            input.form-control.w-100(type="text" name="sex" value= values ? values.sex : "")
        .form-group.mb-4
          .text-secondary.d-flex.justify-content-between.align-items-center
            span Email
            if id === '"email"'
              .small.text-danger #{message}
          input.form-control.w-100(type="email" name="email" value= values ? values.email : "")
        .form-group
          .text-secondary.d-flex.justify-content-between.align-items-center
            span Password
            if id === '"password"'
              .small.text-danger #{message}
          input.form-control.w-100(type="password" name="password" value= values ? values.password : "")
        .form-group
          .text-secondary.text-d-flex.justify-content-between.align-items-center.text-secondary.d-flex.justify-content-between.align-items-center
            span Confirm password
            if id === '"confirm_password"'
              .small.text-danger #{message}
          input.form-control.w-100(type="password" name="confirm_password" value= values ? values.confirm_password : "")
        .d-flex.justify-content-between.align-items-center.mt-5
          span.mb-2.text-decoration-none.text-secondary.text-left Already have an account?
            br
            a(href="login").text-decoration-none.text-left Click here
          button#signup-button(type="submit" style="background-color: #f8f1f1").btn.text-secondary Join
      a.mt-4(href="/").badge.badge-danger.text-center Home
  .display-2.ml-5 Pleasure meeting you :)

